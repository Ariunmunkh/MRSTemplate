@{ Layout = "~/Views/Shared/_lightLayout.cshtml"; }
@model DXWebMRCS.Models.RegisterModel

<!-- Start main-content -->
<div class="main-content">
    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="http://placehold.it/1920x1280">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="font-28 text-white">My Account</h2>
                        <ol class="breadcrumb text-center text-black mt-10">
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Pages</a></li>
                            <li class="active text-gray-silver">Page Title</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-push-3">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, null))
                    { 
                        @Html.AntiForgeryToken()  
                        <div class="icon-box mb-0 p-0">
                            <a href="#" class="icon icon-bordered icon-rounded icon-sm pull-left mb-0 mr-10">
                                <i class="pe-7s-users"></i>
                            </a>
                            @Html.ValidationSummary(true)
                            <h4 class="text-gray pt-10 mt-0 mb-30">Register Now.</h4>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Овог нэр</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label>Өөрийн нэр</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Төрсөн он сар өдөр</label>
                                @Html.TextBoxFor(model => model.BirthOfDay, new { @class = "form-control datepicker", placeholder = "1900-11-24" })
                                @Html.ValidationMessageFor(m => m.BirthOfDay, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label>Хүйс</label>
                                @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>
                                                                {
                                                                   new SelectListItem{ Text="Эрэгтэй", Value = "1" },
                                                                   new SelectListItem{ Text="Эмэгтэй", Value = "2" }
                                                                }, "Та сонгоно уу.",htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Утасны дугаар</label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label>Е-мэйл</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Төрөл</label>
                                @Html.DropDownListFor(model => model.Type, new List<SelectListItem>
                                                                {
                                                                   new SelectListItem{ Text="МУЗН-ийн ажилтан", Value = "1" },
                                                                   new SelectListItem{ Text="Сайн дурын идэвхтэн", Value = "2" },
                                                                   new SelectListItem{ Text="Хэрэглэгч", Value = "3" }
                                                                }, "Та сонгоно уу.", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="form_choose_password">Choose Password</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label>Re-enter Password</label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-dark btn-lg btn-block mt-15" type="submit">Бүртгүүлэх</button>
                        </div>
                    
                    }
                </div>
            </div>
        </div>
    </section>
</div>
<!-- end main-content -->

<script src="~/Scripts/jquery.validate.js"></script>


<script type="text/javascript">
    $(function () { // will trigger when the document is ready
        $('.datepicker').datepicker(); //Initialise any date pickers
    });
</script>