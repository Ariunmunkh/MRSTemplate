@{ Layout = "~/Views/Shared/_lightLayout.cshtml"; }
@model DXWebMRCS.Models.LoginModel

@using(Html.BeginForm(Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null))) {
     @Html.AntiForgeryToken()
    <div class="main-content">
    <!-- Section: inner-header -->    
    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-push-3">
            <h4 class="text-gray mt-0 pt-5"> Login</h4>
            <hr>
            <form name="login-form" class="clearfix">
              <div class="row">
                <div class="form-group col-md-12">
                  <label for="form_username_email">Хэрэглэгчийн мэйл</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-12">
                  <label for="form_password">Нууц үг</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
              </div>
              <div class="checkbox pull-left mt-15">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
              </div>
              <div class="form-group pull-right mt-10">
                <button type="submit" class="btn btn-dark btn-sm">Login</button>
              </div>
              <div class="clear text-center pt-10">
                <a>@Html.ActionLink("Forget Password", "ChangePassword", "Account", routeValues: null, htmlAttributes: new { title = "Forget", @class = "text-theme-colored font-weight-600 font-12" })</a>
              </div>
              <div class="clear text-center pt-10">
                <a class="btn btn-dark btn-lg btn-block no-border mt-15 mb-15" href="#" data-bg-color="#3b5998">Login with facebook</a>
                <a class="btn btn-dark btn-lg btn-block no-border" href="#" data-bg-color="#00acee">Login with twitter</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- end main-content -->
}