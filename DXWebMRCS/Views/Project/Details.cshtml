@model DXWebMRCS.Models.Project

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="main-content">
    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-1" data-bg-img="@Model.Image">
        <div class="container pt-60 pb-60">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 text-center">
                        @if (System.Globalization.CultureInfo.CurrentCulture.Name == "en-US")
                        {
                            <h2 class="title text-white">@Model.TitleEng</h2>
                        }
                        else
                        {
                            <h2 class="title text-white">@Model.TitleMon</h2>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Blog -->
    <section>
        <div class="container mt-30 mb-30 pt-30 pb-30">
            <div class="row">
                <div class="col-md-9">
                    <div class="blog-posts single-post">
                        <article class="post clearfix mb-0">
                            <div class="entry-header">
                                <div class="post-thumb thumb"> <img src="@Model.Image" alt="@Model.TitleMon" class="img-responsive img-fullwidth"> </div>
                            </div>
                            <div class="entry-content">
                                <div class="entry-meta media no-bg no-border mt-15 pb-20">
                                    <div class="entry-date media-left text-center flip bg-theme-colored pt-5 pr-15 pb-5 pl-15">
                                        <ul>
                                            <li class="font-16 text-white font-weight-600">@Model.BeginDate.Value.Day</li>
                                            @if (System.Globalization.CultureInfo.CurrentCulture.Name == "en-US")
                                            {
                                                <li class="font-12 text-white text-uppercase">@Model.BeginDate.Value.Month</li>
                                            }
                                            else
                                            {
                                                <li class="font-12 text-white text-uppercase">@Model.BeginDate.Value.Month.ToString("сар")</li>
                                            }

                                            <li class="font-16 text-white font-weight-600">@Model.BeginDate.Value.Year</li>
                                        </ul>
                                    </div>
                                    <div class="media-body pl-15">
                                        <div class="event-content pull-left flip">
                                            @if (System.Globalization.CultureInfo.CurrentCulture.Name == "en-US")
                                            {
                                                <h3 class="entry-title text-uppercase pt-0 mt-0">@Model.TitleEng</h3>
                                            }
                                            else
                                            {
                                                <h3 class="entry-title text-uppercase pt-0 mt-0">@Model.TitleMon</h3>
                                            }
                                            @*<span class="mb-10 text-gray-darkgray mr-10 font-13"><i class="fa fa-commenting-o mr-5 text-theme-colored"></i> 214 Comments</span>
                        <span class="mb-10 text-gray-darkgray mr-10 font-13"><i class="fa fa-heart-o mr-5 text-theme-colored"></i> 895 Likes</span>*@
                                        </div>
                                    </div>
                                </div>
                                @if (System.Globalization.CultureInfo.CurrentCulture.Name == "en-US")
                                {
                                    @Html.Raw(Model.BodyEng)
                                }
                                else
                                {
                                    @Html.Raw(Model.BodyMon)
                                }

                            </div>
                        </article>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-3">
                        <div class="sidebar sidebar-right mt-sm-30">
                            <div class="widget">
                                <div class="fb-page" data-href="https://www.facebook.com/MongolianRedCrossSociety/" data-tabs="timeline" data-width="292" data-height="500" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/MongolianRedCrossSociety/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/MongolianRedCrossSociety/">Mongolian Red Cross Society</a></blockquote></div>
                            </div>
                            <div class="widget">
                                <a class="twitter-timeline" href="https://twitter.com/MRCS_MN?ref_src=twsrc%5Etfw" data-height="500" data-width="292">Tweets by MRCS_MN</a>
                                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>  
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.12';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
