@model DXWebMRCS.Models.News
@Html.DevExpress().HtmlEditor(settings =>
{
    settings.Name = "BodyEng";
    settings.CallbackRouteValues = new { Controller = "News", Action = "EditBodyEngPartial" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Init = (s, e) =>
    {
        ((MVCxHtmlEditor)s).StylesDocument.Font.Size = FontUnit.Point(14);
        ((MVCxHtmlEditor)s).StylesDocument.ForeColor = System.Drawing.Color.FromArgb(25,25,25,0);
        ((MVCxHtmlEditor)s).StylesDocument.Font.Name = "Tahoma";
    };
    if (Model != null)
        settings.Html = Model.BodyEng;
    settings.ToolbarMode = HtmlEditorToolbarMode.Ribbon;
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadCallbackRouteValues = new { Controller = "News", Action = "BodyEngPartialImageUpload" };
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadFolder = DXWebMRCS.Controllers.NewsControllerBodyEngSettings1.ImageUploadDirectory;
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.ValidationSettings.Assign(DXWebMRCS.Controllers.NewsControllerBodyEngSettings1.ImageUploadValidationSettings);
    settings.SettingsDialogs.InsertImageDialog.SettingsImageSelector.Assign(DXWebMRCS.Controllers.NewsControllerBodyEngSettings1.ImageSelectorSettings);
}).GetHtml()