@model DXWebMRCS.Models.News
@Html.DevExpress().HtmlEditor(settings =>
{
    settings.Name = "BodyMon";
    settings.CallbackRouteValues = new { Controller = "News", Action = "EditBodyMonPartial" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Init = (s, e) =>
    {
        ((MVCxHtmlEditor)s).StylesDocument.Font.Size = FontUnit.Point(14);
        ((MVCxHtmlEditor)s).StylesDocument.ForeColor = System.Drawing.Color.FromArgb(25, 25, 25, 0);
        ((MVCxHtmlEditor)s).StylesDocument.Font.Name = "Tahoma";
    };
    if (Model != null)
        settings.Html = Model.BodyMon;
    settings.ToolbarMode = HtmlEditorToolbarMode.Ribbon;    
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadCallbackRouteValues = new { Controller = "News", Action = "BodyMonPartialImageUpload" };
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadFolder = DXWebMRCS.Controllers.NewsControllerBodyMonSettings.ImageUploadDirectory;
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.ValidationSettings.Assign(DXWebMRCS.Controllers.NewsControllerBodyMonSettings.ImageUploadValidationSettings);
    settings.SettingsDialogs.InsertImageDialog.SettingsImageSelector.Assign(DXWebMRCS.Controllers.NewsControllerBodyMonSettings.ImageSelectorSettings);
}).GetHtml()