@model Tuple<DXWebMRCS.Models.News, IEnumerable<DXWebMRCS.Models.News>>
@{
    ViewBag.Title = "NewsDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@{string language = System.Globalization.CultureInfo.CurrentCulture.Name;}
<!-- Start main-content -->
<div class="main-content">
    @{string imageUrl = @Model.Item1.Image != null ? System.Configuration.ConfigurationManager.AppSettings["webURL"] + @Model.Item1.Image : "http://placehold.it/1920x1280";}
    <!-- Section: inner-header -->
    <section class="inner-header divider layer-overlay overlay-8" data-bg-img=@imageUrl>
        <div class="container pt-60 pb-60">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-sm-8 text-left flip xs-text-center text-white" >
                        <h2 class="title">
                            @if (language == "en-US")
                            {
                                @Model.Item1.TitleEng
                            }
                            else
                            {
                                @Model.Item1.TitleMon
                            }
                        </h2>
                    </div>
                    @*<div class="col-sm-4">
                        <ol class="breadcrumb text-right sm-text-center text-black mt-10">
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Detail</a></li>
                            <li class="active text-gray-silver">
                                @if (language == "en-US")
                                {
                                    @Model.Item1.TitleEng
                                }
                                else
                                {
                                    @Model.Item1.TitleMon
                                }
                            </li>
                        </ol>
                    </div>*@
                </div>
            </div>
        </div>
    </section>

    <!-- Section: About -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="blog-posts single-post">
                        @if (language == "en-US")
                        {
                            @Html.Raw(Model.Item1.BodyEng)
                        }
                        else
                        {
                            @Html.Raw(Model.Item1.BodyMon)
                        }
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="sidebar sidebar-left mt-sm-30">
                        <div class="widget">
                            <h5 class="widget-title line-bottom">Latest News</h5>
                            <div class="latest-posts">
                                @foreach (var item in Model.Item2)
                                {
                                    <article class="post media-post clearfix pb-0 mb-10">
                                        <a class="post-thumb" href='@Url.Action("NewsDetail", "News", new { id = @item.CID })'>
                                            @{string itemImageUrl = item.ImageMedium != null ? System.Configuration.ConfigurationManager.AppSettings["webURL"] + item.ImageMedium : "https://placehold.it/75x75";}
                                            <img src=@itemImageUrl alt="">

                                        </a>
                                        <div class="post-right">
                                            <h5 class="post-title mt-0">
                                                <a href='@Url.Action("NewsDetail", "News", new { id = @item.CID })'>
                                                    @if (language == "en-US")
                                                    {
                                                        if (@item.TitleEng.Count() > 50)
                                                        {
                                                            @item.TitleEng.Substring(0, 50)
                                                        }
                                                        else
                                                        {
                                                            @item.TitleEng
                                                        }
                                                    }
                                                    else
                                                    {
                                                        if (@item.TitleMon.Count() > 50)
                                                        {
                                                            @item.TitleMon.Substring(0, 50)
                                                        }
                                                        else
                                                        {
                                                            @item.TitleMon
                                                        }
                                                    }
                                                </a>
                                            </h5>
                                            <p>Lorem ipsum dolor sit amet adipisicing elit...</p>
                                        </div>
                                    </article>
                                }
                            </div>
                        </div>
                        @{Html.RenderAction("TagPartial", "News");}
                </div>
            </div>
        </div>
            </div>
    </section>
</div>
