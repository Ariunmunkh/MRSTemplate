@model DXWebMRCS.Models.SliderPhoto
@{
    ViewBag.Title = "SliderAdd";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Слайд оруулах</h3>
            </div>

        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="form-horizontal">
                    @using (Html.BeginForm("SliderAdd", "SysAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="divider-dashed"></div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Монгол гарчиг</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.MonTitle, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Англи гарчиг</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.EngTitle, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Зураг</label>
                            <div class="col-md-3">
                                <input type="file" name="ImageFile" required onchange="show(this)">
                                @if (string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img id="user_img" src="~/Content/images/defaultImage2.png" height="100" width="120" />
                                }
                                else
                                {
                                    <img id="user_img" src="@Url.Content(HttpContext.Current.Request.Url.AbsoluteUri.Replace(HttpContext.Current.Request.Url.AbsolutePath, "/") + Model.ImagePath)" height="100" width="90" />
                                }

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function show(input) {
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#user_img').attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }
</script>  