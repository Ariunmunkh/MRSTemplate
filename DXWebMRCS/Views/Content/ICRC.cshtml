
@{
    ViewBag.Title = "ICRC";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    .pb-200 {
        padding-bottom: 50px !important;
    }

    .pt-200 {
        padding-top: 50px !important;
    }

    .h1, .h2, .h3, h1, h2, h3 {
        margin-top: 500px;
    }
</style>
<section class="inner-header divider parallax layer-overlay overlay-dark-3" data-bg-img="/Content/Cont/icrc1.jpg">
    <div class="container pt-200 pb-200">
        <!-- Section Content -->
        <div class="section-content">
            <div class="row">
                <div class="col-md-12 text-center">
                    @if (System.Globalization.CultureInfo.CurrentCulture.Name == "en-US")
                    {
                    <h2 class="font-48 text-white">INTERNATIONAL COMMITTEE OF THE RED CROSS</h2>
                    }
                    else
                    {
                    <h2 class="font-48 text-white">ОЛОН УЛСЫН УЛААН ЗАГАЛМАЙ ХОРОО</h2>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@if (System.Globalization.CultureInfo.CurrentCulture.Name == "en-US")
{
    <section>
        <div class="container pt-70 pb-70">
            <div class="section-title text-center">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h2 class="mt-0 line-height-1 text-uppercase"><span class="text-theme-colored">International Committee of the Red Cross</span></h2>
                    </div>
                </div>
            </div>
            <div class="section-content">
                <div class="row">
                    <section class="bg-white-f7">
                        <div class="container alert alert-info pb-0 pt-0">
                            <div class="section-title">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="text-left flip">
                                            <p class="left-bordered mt-40 text-justify">
                                                The International Committee of the Red Cross (ICRC) is an impartial, neutral and independent organization whose exclusively humanitarian mission is to protect the lives and dignity of victims of armed conflict and other situations of violence and to provide them with assistance.
                                                The ICRC also endeavours to prevent suffering by promoting and strengthening humanitarian law and universal humanitarian principles.
                                                Established in 1863, the ICRC is at the origin of the Geneva Conventions and the International Red Cross and Red Crescent Movement. It directs and coordinates the international activities conducted by the Movement in armed conflicts and other situations of violence.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="separator">
                        <span>International Committee of the Red Cross</span>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="maxwidth500 mb-sm-30 border-2px">
                            <div class="image-box-details text-center p-10 pt-20 pb-10 bg-lighter">
                                <h3 class="title mt-0 text-theme-colored">Geneva Convention I</h3>
                            </div>
                            <div class="team-upper-block text-center">
                                <img class="img-fullwidth" src="~/Content/Cont/icrc2.jpg" alt="">
                            </div>
                            <div class="team-lower-block text-center pt-10 p-20">
                                <h5>
                                    The first Geneva Convention protects wounded and sick soldiers on land during war.
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="maxwidth500 mb-sm-30 border-2px">
                            <div class="image-box-details text-center p-10 pt-20 pb-10 bg-lighter">
                                <h3 class="title mt-0 text-theme-colored">Geneva Convention II</h3>
                            </div>
                            <div class="team-upper-block text-center">
                                <img class="img-fullwidth" src="~/Content/Cont/icrc3.jpg" alt="">
                            </div>
                            <div class="team-lower-block text-center pt-10 p-20">
                                <h5>
                                    The second Geneva Convention protects wounded, sick and shipwrecked military personnel at sea during war.
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="maxwidth500 mb-sm-30 border-2px">
                            <div class="image-box-details text-center p-10 pt-20 pb-10 bg-lighter">
                                <h3 class="title mt-0 text-theme-colored">Geneva Convention III</h3>
                            </div>
                            <div class="team-upper-block text-center">
                                <img class="img-fullwidth" src="~/Content/Cont/icrc4.jpg" alt="">
                            </div>
                            <div class="team-lower-block text-center pt-10 p-20">
                                <h5>
                                    The third Geneva Convention applies to the treatment of prisoners of war.
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="maxwidth500 mb-sm-30 border-2px">
                            <div class="image-box-details text-center p-10 pt-20 pb-10 bg-lighter">
                                <h3 class="title mt-0 text-theme-colored">Genevan Convention IV</h3>
                            </div>
                            <div class="team-upper-block text-center">
                                <img class="img-fullwidth" src="~/Content/Cont/icrc5.jpg" alt="">
                            </div>
                            <div class="team-lower-block text-center pt-10 p-20">
                                <h5>
                                    The fourth Geneva Convention protects civilians, including those in occupied territory.
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="separator">
                                <span class="text-theme-colored text-uppercase"><b>Нэмэлт 2 протокол 1977 он</b></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="maxwidth500 mb-sm-30 border-2px">
                            <div class="image-box-details text-center p-10 pt-20 pb-10 bg-lighter">
                                <h3 class="title mt-0 text-theme-colored">Additional Protocol I</h3>
                            </div>
                            <div class="team-upper-block text-center">
                                <img class="img-fullwidth" src="~/Content/Cont/icrc6.jpg" alt="">
                            </div>
                            <div class="team-lower-block text-center pt-10 p-20">
                                <h5>
                                    Relating to the Protection of Victims of International Armed Conflicts.
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="maxwidth500 mb-sm-30 border-2px">
                            <div class="image-box-details text-center p-10 pt-20 pb-10 bg-lighter">
                                <h3 class="title mt-0 text-theme-colored">Additional Protocol II</h3>
                            </div>
                            <div class="team-upper-block text-center">
                                <img class="img-fullwidth" src="~/Content/Cont/icrc7.jpg" alt="">
                            </div>
                            <div class="team-lower-block text-center pt-10 p-20">
                                <h5>
                                    Relating to the Protection of Victims of Non-International Armed Conflicts
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
